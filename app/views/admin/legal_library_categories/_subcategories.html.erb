<% category.subcategories.each do |subcategory| %>
  <p >
    <%= link_to subcategory.title, admin_legal_library_category_path(subcategory) %>
    <%= link_to edit_admin_legal_library_category_path(subcategory), class: 'edit-nested' do %>
      <span class="glyphicon glyphicon-pencil">
    <% end %>
    <%= link_to admin_legal_library_category_path(subcategory), method: :delete, class: 'delete-nested' do %>
      <span class="glyphicon glyphicon-remove">
    <% end %>
  </p>
<% end %>
<%= link_to new_admin_legal_library_category_path(parent: category.id), class: 'create-new-nested' do %>
  <span class="glyphicon glyphicon-plus">
<% end %>
